<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/whiteuniv"
    android:padding="@dimen/margin_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivFood"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:src="@drawable/rider" />
            <TextView
                android:layout_below="@+id/tvFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client"
                android:id="@+id/client"
                android:textSize="18sp"
                android:layout_toEndOf="@+id/ivFood"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/geofence"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:drawablePadding="2dp"
                android:drawableEnd="@drawable/ic_location"
                android:layout_height="wrap_content"
                android:text="Notify User"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/background800"/>


            <TextView
                android:id="@+id/addressLat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uthiru"
                android:layout_toEndOf="@+id/ivFood"
                android:textSize="16sp"
                android:layout_below="@+id/client"
                android:layout_marginStart="5dp"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/addressLong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uthiru"
                android:layout_toEndOf="@+id/ivFood"
                android:textSize="16sp"
                android:layout_below="@+id/addressLat"
                android:layout_marginStart="5dp"
                android:padding="5dp"/>




        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>